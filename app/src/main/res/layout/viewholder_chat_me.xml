<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginStart="@dimen/spaceLR">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/tv_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space10"
            tools:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="14sp"
            android:background="@drawable/bg_chat_me"
            android:layout_marginBottom="@dimen/space5"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/space10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/space5"
            tools:text="05:04"
            android:textSize="11sp"/>
    </LinearLayout>
</RelativeLayout>